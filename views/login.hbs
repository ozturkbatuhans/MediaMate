<div class="container mt-5 p-4 rounded" style="background-color: #8b1d2e; color: black;">

  <h1 class="text-center mb-4">Login</h1>

  {{#if errorMessage}}
    <div class="alert alert-danger text-center" role="alert">
      {{errorMessage}}
    </div>
  {{/if}}

  <form action="/login" method="POST" class="mt-4 col-md-6 offset-md-3">
   
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" name="username" required />
    </div>
   
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required />
    </div>
   
    <div class="text-center">
      <button type="submit" class="btn btn-danger">Login</button>
    </div>
  </form>

  <div class="text-center mt-3">
    <small>Don't have an account? 
      <a href="http://localhost:3000/register" style="color: white; text-decoration: underline;">Sign up</a>
    </small>
  </div>

</div>
